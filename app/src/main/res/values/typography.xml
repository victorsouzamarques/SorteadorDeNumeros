<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Sora Display Medium -->
    <style name="TextAppearance.Sora.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/sora_extrabold</item>
        <item name="android:textSize">40sp</item>
        <!-- Line height equivalent: 52sp (130%) -->
        <item name="android:lineSpacingExtra">4sp</item> <!-- Extra spacing to match 130% -->
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Sora Display Small -->
    <style name="TextAppearance.Sora.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textSize">32sp</item>
        <!-- Line height equivalent: 42sp (130%) -->
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Roboto Mono Overline -->
    <style name="TextAppearance.RobotoMono.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">16sp</item>
        <!-- Line height equivalent: 24sp (150%) -->
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Roboto Flex Paragraph Medium -->
    <style name="TextAppearance.RobotoFlex.ParagraphMedium" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_flex</item>
        <item name="android:textSize">14sp</item>
        <!-- Line height equivalent: 21sp (150%) -->
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- Roboto Flex Paragraph Small -->
    <style name="TextAppearance.RobotoFlex.ParagraphSmall" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_flex</item>
        <item name="android:textSize">12sp</item>
        <!-- Line height equivalent: 18sp (150%) -->
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- Roboto Flex Label Medium -->
    <style name="TextAppearance.RobotoFlex.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/roboto_flex</item>
        <item name="android:textSize">20sp</item>
        <!-- Line height equivalent: 30sp (150%) -->
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Roboto Flex Label Small -->
    <style name="TextAppearance.RobotoFlex.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/roboto_flex</item>
        <item name="android:textSize">16sp</item>
        <!-- Line height equivalent: 24sp (150%) -->
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>